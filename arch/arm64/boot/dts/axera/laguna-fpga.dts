/dts-v1/;
#include "laguna.dtsi"
#include "laguna-fpga-clocks.dtsi"

/ {
	compatible = "axera,laguna-fpga";
	model = "Axera Laguna FPGA Platform";
	#address-cells = <2>;
	#size-cells = <2>;
	interrupt-parent = <&gic>;

	memory@400000000 {
		reg = <0x1 0x00000000 0x2 0x00000000>;
		device_type = "memory";
	};

	chosen {
		stdout-path = &serial1;
		bootargs = "earlycon=uart8250,mmio32,0x0E403000 console=ttyS1,115200n8 rdinit=/init rw loglevel=10 clk_ignore_unused";
	};
};

&pmu {
	status = "okay";
};

&dsu_pmu {
	status = "okay";
};

&serial1 {
	status = "okay";
};

&serial2 {
	status = "okay";
};

&serial3 {
	status = "okay";
};

&serial4 {
	status = "okay";
};

&serial5 {
	status = "okay";
};